<h1><%= t('my_courses_page.my_plan_click_to_start') %></h1>

<p>
  <%= t('my_courses_page.purple_and_gray_courses') %> <%= link_to "#{ t('my_courses_page.click_here_to_homepage') }", root_path %>
  <%= t('my_courses_page.completed_most_courses') %> <%= link_to "#{t('my_courses_page.click_here_to_quiz')}", courses_quiz_path %>
  <%= t('my_courses_page.well_suggest_more_courses') %>
</p>
  <div class="row no-bottom-margin">
    <div class="right-third">
      <div class="search-box">
        <%= form_tag your_courses_path, method: :get do %>
          <%= search_field_tag :search, params[:search], placeholder: "#{t('home.search_courses')}" %>
          <i class="icon-search grey"></i>
          <%= submit_tag "Search", id: "search_btn" %>
        <% end %>
      </div>
    </div>
  </div>

  <%= render partial: "shared/courses/listing" %>

  <% if @results && @results.blank? %>
    <p>No courses match your search. <%= link_to "View all your courses", your_courses_path %></p>
  <% end %>
