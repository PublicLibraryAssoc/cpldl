<%# TODO: This could be DRY'd up into a partial. %>
<% content_for :meta_title do %>
  <%= @course.seo_page_title.present? ? @course.seo_page_title : @course.title  %>
<% end %>
<% content_for :meta_description do %>
  <%= @course.meta_desc.present? ? @course.meta_desc : @course.summary %>
<% end %>
<% content_for :callout do %>
  <h1><%= @course.title %></h1>
<% end %>

<div><small><%= link_to "Courses", courses_path %> >> <%= @course.title %></small></div>

<div class="row">
  <div class="twelvecol congrats-banner">
    <div class="row">
      <%= content_tag :p, "Congratulations, #{current_user.profile.first_name}." %>
      <%= content_tag :p, "You've successfully completed #{@course.title}!", class: "small-margin" %>
    </div>
    <div class="row">
      <div class="cert-preview hide-on-tablet">
        <div class="cert-inner">
          <div>
            <h1>Certificate of Completion</h1>
            <p>
              This award certifies that
            </p>
            <%= content_tag :h2, "#{current_user.profile.first_name}", class: "name" %>
            <p>
              has completed the Digital Learning Center Class:
            </p>
            <%= content_tag :h2, "#{@course.title}", class: "course" %>
            <p>
              as of <%= local_time(current_user.course_progresses.where(course_id: @course.id).first.completed_at, '%B %e, %Y') %>
            </p>
            <%= image_tag "dl_logo.png" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="center-button">
        <%= link_to course_complete_path(@course, format: 'pdf') do %>
          <%= button_tag("Download Your Certificate", type: "button") %>
        <% end %>
      </div>
    </div>
    <div class="row congrats-last-row">
      <div class="sixcol lower-button">
        <%= link_to your_courses_path do %>
          <%= button_tag("Return to Your Courses", type: "button", class: "btn-grey") %>
        <% end %>
      </div>
      <div class="sixcol lower-button">
        <%= link_to courses_path do %>
          <%= button_tag("View All Courses", type: "button", class: "btn-grey") %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<hr />

<div class="row">
  <div class="sixcol border-right">
    <h2>Notes and Partner Resources</h2>
    <% if @course.notes.present? %>
      <div><%= simple_format @course.notes %></div>
    <% else %>
      <p class="note">There are no notes or partner resources for this course.</p>
    <% end %>
  </div>

  <div class="sixcol last">
    <%= render partial: "shared/post_course_materials", locals: { course: @course } %>
  </div>
</div>
