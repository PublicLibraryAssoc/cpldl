<% content_for :meta_title do %>
  <%= @course.seo_page_title.present? ? @course.seo_page_title : @course.title  %>
<% end %>
<% content_for :meta_description do %>
  <%= @course.meta_desc.present? ? @course.meta_desc : @course.summary %>
<% end %>
<% content_for :callout do %>
  <%= @course.title %>
<% end %>

<small><%= link_to "Courses", courses_path %> >> <%= @course.title %></small>

<div class="row">
  <div class="eightcol">
    <%# TODO: Fill in dynamic info when ready. %>
    <div class="course-details">
      <div><i class="icon-pencil"></i>4 Lessons</div>
      <div><i class="icon-clock"></i>15 Minutes</div>
    </div>
    <small>Contributed by Leslie James, <%= link_to "Commerce Kitchen", "#" %></small>
  </div>

  <div class="fourcol last align-right">
    <%# TODO: make method for this conditional  %>
    <% if current_user.present? && current_user.is_admin? %>
      <p><small><%= link_to "Edit Course >>", edit_admin_course_path(@course) %></small></p>
    <% end %>
    <p>+ Add to / - Remove from Your Plan</p>
    <%= link_to "Start Course", course_lesson_path(@course, @course.lessons.first), class: "btn" %>
  </div>
</div>

<div><%= simple_format @course.description %></div>

<hr>

<h2>Lessons in this course</h2>
<%= render partial: "shared/lessons/grid", locals: { course: @course } %>
<hr>

<h2>Supplemental Materials</h2>

<%= link_to "#" do %>
  <i class="icon-download"></i>This is a PDF of the Course
<% end %>