<div class="twelvecol">
  <div class="cert-box">
    <h2>Certificate of Completion</h2>
    <p>
      This award certifies that
    </p>
    <%= content_tag :h3, "#{current_user.profile.first_name}", class: "name" %>
    <p>
      has completed:
    </p>
    <%= content_tag :h3, "#{@course.title}", class: "course" %>
    <p>
      as of <%= local_time(current_user.course_progresses.where(course_id: @course.id).first.completed_at, '%B %e, %Y') %>
    </p>
    <%= wicked_pdf_image_tag "dl_logo.png" %>
  </div>
</div>
