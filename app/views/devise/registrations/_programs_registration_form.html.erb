<fieldset>
  <%= f.label :library_card_number, t('profile_page.program'), class: "signup-label" %>
  <%= f.text_field :library_card_number, placeholder: "#{t('login_signup.library_card_number')}" %>
</fieldset>

<p class="small-14 grey extra-bottom-margin">
  <%= t('login_signup.dont_have_library_card') %> <%= link_to "#{t('login_signup.click_here')}", "https://library.nashville.org/get-card", target: "_blank" %> <%= t('login_signup.register_for_library_card') %>
</p>

<fieldset>
  <%= f.label "program_type", t('login_signup.program_type_prompt'), class: "signup-label" %>
  <div class="inline-radio-group">
    <div class="radio-option">
      <%= radio_button_tag("program_type", "none", checked: true) %>
      <%= label_tag("program_type_none", "No Program", class: "signup-label") %>
    </div>
    <% Program::PARENT_TYPES.each do |label, value| %>
      <div class="radio-option">
        <%= radio_button_tag("program_type", value) %>
        <%= label_tag("program_type_#{value}", label, class: "signup-label") %>
      </div>
    <% end %>
  </div>
</fieldset>

<fieldset>
  <%= select_tag :organization_program, options_for_select([]), include_blank: "#{t('login_signup.no_program_selected')}", class: "hideUntilActive" %>
</fieldset>

<div id="conditional_program_fields" class="extra-bottom-margin">
  <div id="program_location_fields" class="hideUntilActive">
    <%= render partial: "devise/registrations/program_locations_form", locals: { f: f } %>
  </div>

  <div id="school_fields" class="hideUntilActive">
    <%= render partial: "devise/registrations/schools_form", locals: { f: f } %>
  </div>
</div>
