<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render partial: 'devise/shared/error_messages', resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <fieldset>
    <%= f.label :password, class: "text-color" do %>
      New Password
      <% if @minimum_password_length %>
        <i class="note">(<%= @minimum_password_length %> characters minimum)</i>
      <% end %>
    <% end %>
    <%= f.text_field :password, autofocus: true, autocomplete: "off" %>
  </fieldset>

  <fieldset>
    <%= f.label :password_confirmation, "Confirm new password", class: "text-color" %>
    <%= f.text_field :password_confirmation, autocomplete: "off" %>
  </fieldset>

  <%= f.submit "Change my password" %>

<% end %>

<%= render "devise/shared/links" %>
