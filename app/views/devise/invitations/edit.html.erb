<h2><%= t "devise.invitations.edit.header" %></h2>

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :invitation_token, readonly: true %>

  <% if f.object.class.require_password_on_accepting %>
    <div class="form-row">
      <fieldset>
        <%= f.label :password, class: "text-color" do %>
          New Password
          <% if @minimum_password_length %>
            <i class="note">(<%= @minimum_password_length %> characters minimum)</i>
          <% end %>
        <% end %>
        <%= f.text_field :password, autofocus: true, autocomplete: "off" %>
      </fieldset>
    </div>

    <div class='form-row'>
      <fieldset>
        <%= f.label :password_confirmation, "Confirm new password", class: "text-color" %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </fieldset>
    </div>
  <% end %>

  <div class="form-row">
    <%= f.submit t("devise.invitations.edit.submit_button") %>
  </div>
<% end %>
