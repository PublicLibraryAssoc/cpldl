<%= content_for(:callout) do %>
  <h1>Admin Dashboard</h1>
<% end %>

<h2>Partners</h2>

<ul id="partner_list" class="admin-resource-list">
  <% @partners.each do |partner| %>
    <%= render partial: 'partner_row', locals: { partner: partner } %>
  <% end %>
</ul>

<%= form_for [:admin, @new_partner], remote: true do |f| %>
  <fieldset>
    <div class='inline-form'>
      <%= f.text_field :name %>
      <%= f.submit "Add Partner" %>
    </div>
  </fieldset>
<% end %>