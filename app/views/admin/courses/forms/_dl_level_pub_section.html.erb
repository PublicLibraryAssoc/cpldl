<div class="row">
  <div class="sixcol">
    <fieldset>
      <%= f.label :level, class: "text-color" do %>
        Course Level<span class="required"></span>
      <% end %>
      <%= f.select(:level, options_for_select(["Beginner", "Intermediate", "Advanced"], @course.level), { include_blank: "Select..." } ) %>
    </fieldset>
  </div>

  <div class="sixcol last">
    <fieldset>
      <%= f.label :pub_status, class: "text-color" do %>
        Publication Status<span class="required"></span>
      <% end %>
      <%= f.select(:pub_status, options_for_select([["Draft", "D"], ["Published", "P"], ["Archived", "A"]], @course.pub_status), { include_blank: "Select..." } ) %>
    </fieldset>
  </div>
</div>

<div class="row">
  <div class="sixcol">
    <fieldset>
      <%= f.label :display_on_dl, class: "text-color" do %>
        Display on Homepage?
      <% end %>
      <div class="onecol">
        <%= f.check_box :display_on_dl %>
      </div>
      <div class="elevencol">
        <span>This course should show up on the Digital Learn home page.</span>
      </div>
    </fieldset>
  </div>

  <div class="sixcol last">
    <fieldset>
      <%= f.label :subsite_course, class: "text-color" do %>
        Course for Subsites?
      <% end %>
      <div class="onecol">
        <%= f.check_box :subsite_course %>
      </div>
      <div class="elevencol">
        <span>This course is intended for subsites of Digital Learn to use.</span>
      </div>
    </fieldset>
  </div>
</div>
