<% content_for(:callout) do %>
  <h1>Customizable Text Section</h1>
<% end %>

<%= form_for @translation, url: admin_custom_translations_path do |form| %>
  <%= render partial: 'fields', locals: { form: form, translation: @translation } %>

  <p>
    <%= form.submit 'Submit', class: "button-color" %>
    <%= link_to 'Cancel', admin_custom_translations_url(@locale), class: "btn btn-grey" %>
  </p>
<% end %>
