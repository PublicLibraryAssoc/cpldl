<% content_for(:callout) do %>
  <h1>Translations for <%= locale_string(@locale) %></h1>
<% end %>

<p class="emphasis no-top-margin">Change your language preference on the header to update other language translations</p>

<table>
  <thead>
    <tr>
      <th>Translation Key</th>
      <th>Setting</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% translation_keys(@locale).each do |key| %>
      <% translation = translation_for_key(@translations, key) %>
      <tr id="<%= key %>">
        <td><%= key %></td>
        <td><%= translation.nil? ? I18n.t(key, locale: @locale) : translation.value %></td>
        <td>
          <% if translation.nil? %>
            <%= link_to "Edit", new_admin_custom_translation_url(@locale, key: key) %>
          <% else %>
            <%= link_to "Edit", edit_admin_custom_translation_url(translation, @locale) %>
            <%= link_to "Reset", admin_custom_translation_url(translation, @locale), method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
