<%= form_for( [:admin, @program], html: { multipart: true } ) do |f| %>
  <% if @program.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@program.errors.count, "error") %> prohibited this program from being saved:</h2>
      <ul>
      <% @program.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-row'>
    <fieldset>
      <%= f.text_field :program_name, placeholder: "#{t('programs_form.program_name')}" %>
    </fieldset>
  </div>

  <div class='form-row'>
    <fieldset>
      <%= f.select :parent_type, Program::PARENT_TYPES, { include_blank: t('programs_form.parent_type') } %>
    </fieldset>
  </div>

  <div class='form-row'>
    <fieldset>
      <%= f.label :location_required, class: "text-color" do %>
        <span><%= t('programs_form.require_locations') %>&nbsp;</span>
        <%= f.check_box :location_required %>
      <% end %>
    </fieldset>
  </div>

  <div class='form-row'>
    <%= f.submit "Create Program", class: "button-color" %>
  </div>
<% end %>
