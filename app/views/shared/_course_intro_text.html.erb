<% if user_signed_in? && current_user.is_admin? %>
  <%= content_for(:callout) { %><h1>Hi Admin! Connect to the Digital World.</h1><% } %>
  <h1>
    Edit a course by clicking on a course below, search courses or navigate to the
    <%= link_to "Admin Dashboard", admin_dashboard_index_path %>.
  </h1>
  <div class="row no-bottom-margin">
    <div class="right-third">
      <%= render partial: "shared/courses/search_box" %>
    </div>
  </div>
<% elsif user_signed_in? %>
  <%= content_for(:callout) do %>
    <h1>Hi <%=current_user.profile.first_name%>! Connect to the Digital World.</h1>
  <% end %>
  <h1>
    Choose a course below to start learning, search courses, or visit
    <%= link_to "My Courses", your_courses_path %> to view your customized learning plan.
  </h1>

  <div class="row no-bottom-margin">
    <div class="right-thrid">
      <%= render partial: "shared/courses/search_box" %>
    </div>
  </div>
<% else %>
  <h1>Choose a course below to start learning or search courses.</h1>

  <div class="clearfix">
    <p class="no-top-margin left-two-thirds">If you are new to computers, haven't used them for a while, are a little unsure and uncomfortable, or just need a bit of a refresher, we have the tools to help you tackle technology at your own pace and gain the confidence you need to succeed.</p>

    <%= render partial: "shared/courses/search_box" %>
  </div>
<% end %>
