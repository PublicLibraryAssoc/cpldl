<script>
$(document).ready(function() {

  $("body").on("click", "*[data-cpl-ga-event='on']", function() {

    var cpl_ga_value = $(this).data("cpl-ga-value");
    var pathname = window.location.pathname;

    if (cpl_ga_value === "user-open-course") {
      ga("send", "event", "user open course", "click", '"' + pathname + '"');
    }

    if (cpl_ga_value === "user-start-course") {
      ga("send", "event", "user start course", "click", '"' + pathname + '"');
    }

    if (cpl_ga_value == "add-course-to-plan") {
      ga("send", "event", "user add course to plan", "click", '"' + pathname + '"');
    }

    if (cpl_ga_value === "remove-course-from-plan") {
      ga("send", "event", "user remove course from plan", "click", '"' + pathname + '"');
    }

    if (cpl_ga_value === "user-start-lesson") {
      ga("send", "event", "user click start lesson", "click", '"' + pathname + '"');
    }

    if (cpl_ga_value === "user-click-lesson") {
      ga("send", "event", "user click lesson tile", "click", '"' + pathname + '"');
    }

    if (cpl_ga_value === "supplemental-material-download") {
      var documentName = $(this).data("document-name");
      ga("send", "event", "user download supplemental material: " + '"' + documentName + '"', "click", '"' + pathname + '"');
    }

  });

  $("footer").on("click", ".link-cpl", function() {
    ga("send", "event", "exernal link", "click", "Chicago Public Library");
  });

  $("footer").on("click", ".link-npl", function() {
    ga("send", "event", "exernal link", "click", "Nashville Public Library");
  });

  $("footer").on("click", ".link-kpl", function() {
    ga("send", "event", "exernal link", "click", "Kalamazoo Public Library");
  });

  $("footer").on("click", ".link-tscpl", function() {
    ga("send", "event", "exernal link", "click", "Topeka Shawnee County Public Library");
  });

  $("footer").on("click", ".link-pima", function() {
    ga("send", "event", "exernal link", "click", "Pima County Public Library");
  });

  $("footer").on("click", ".link-ebrpl", function(){
    ga("send", "event", "external link", "click", "East Baton Rouge Public Library");
  });

  $("footer").on("click", ".link-carnegielibrary", function(){
    ga("send", "event", "external link", "click", "Carnegie Library of Pittsburgh");
  });

  $("footer").on("click", ".link-kclibrary", function(){
    ga("send", "event", "external link", "click", "Kansas City Public Library");
  });

  $("footer").on("click", ".link-pla", function() {
    ga("send", "event", "exernal link", "click", "Public Library Association");
  });

  $(".cms_page a").on("click", function() {
    var hrefValue = $(this).attr("href");
    ga("send", "event", "exernal cms link", "click", '"' + hrefValue + '"');
  })

});
</script>
