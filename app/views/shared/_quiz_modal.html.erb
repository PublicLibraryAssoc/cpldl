<div class="modal">
  <input class="modal-state" id="quiz-start-modal" type="checkbox" />
  <div class="modal-fade-screen">
    <div class="modal-inner quiz-modal-inner">
      <div class="modal-close" for="quiz-start-modal"></div>
      <h1><%= current_user.profile.first_name %>, what would you like to learn?</h1>
      <h2>Answer three questions and we'll recommend which courses to take.</h2>
      <ol>
        <%= render "shared/quiz_section_one" %>
      </ol>
      <%= link_to "Back", "#",
        class: "btn btn-grey small", onclick: "Modal.close();", style: "float:left; margin-top: 1em;" %>
      <%= link_to "Next", "#",
        class: "btn small", onclick: "Modal.close();", style: "float:right; margin-top: 1em;" %>
    </div>
  </div>
</div>
