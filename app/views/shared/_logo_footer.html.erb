<% # remove this hard coding from this file %>
<div class="logo">
  <div class="logo-icon">
    <div class="ninecol right-logo">
      <% if subdomain? %>
        <%= link_to footer_logo_link_url || '#', target: "_blank" do %>
          <%= image_tag footer_logo_url, class: "medium-logo link-kclibrary" %>
        <% end %>
      <% end %>

      <%= link_to "http://www.ala.org/pla/", target: "_blank" do %>
        <% if top_level_domain? %>
          <%= image_tag "pla_logo_black", class: "link-pla" %>
        <% else %>
          <%= image_tag "pla_logo_white", class: "link-pla" %>
        <% end %>
      <% end %>

      <div class="license">
        This work is licensed under a Creative Commons Attribution-ShareAlike 3.0 Unported License
      </div>
    </div>
  </div>
</div>
