<header class="header-logged-out">

  <div class="container">
    <div class="row">
      <div class="two-col">
        <%= render "shared/icon" %>
      </div>

      <div class="six-col">
        <% if content_for?(:callout) %>
          <h1><%= yield :callout %></h1>
        <% else %>
          <h1>Connect to the Digital World</h1>
        <% end %>
      </div>

      <div class="four-col last">
        <%= link_to "Log In", user_account_path, class: "btn" %>
      </div>
    </div>
  </div>

</header>