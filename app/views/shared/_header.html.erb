<header class="header-logged-out">
  <div class="container">
    <div class="language-links">
      <small><%= link_to "English", home_language_toggle_path("en") %> | <%= link_to "Espa&ntilde;ol".html_safe, home_language_toggle_path("es") %></small>
    </div>
    <%= link_to root_url(subdomain: request.subdomain) do %>
      <div>
        <% case request.subdomain %>
        <% when "admin" %>
          <%= render "shared/logo_white" %>
        <% else %>
          <%= render "shared/logo_white" %>
          <% if content_for?(:callout) %>
            <%= yield :callout %>
          <% else %>
            <h1><%= t('home.logo_banner') %></h1>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <%= link_to "#{t('home.signup')} / #{t('home.login')}", login_path, class: "btn" %>
  </div>
</header>
