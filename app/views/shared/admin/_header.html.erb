<header class="header-logged-in <%= "lesson-header" if request.path.include?("/lessons/")%>">
  <div class="container">
    <div class="language-links">
      <%= render "shared/language_links" %>
    </div>
    <div class="logo-link-container">
      <%= render "shared/logo_purple" %>
      <div class="search-container">
        <div class="signup-box">
          <nav class="left-or-right header-top-nav">
            Hi Admin! |
            <%= link_to "Admin Dashboard", admin_dashboard_index_path %> |
            <% if top_level_domain? %>
              <%= link_to "Community Of Practice", "http://community.digitallearn.org", target: "_blank" %> |
            <% end %>
            <%= link_to "Sign Out", destroy_user_session_path, method: "delete" %>
          </nav>
        </div>
        <div class="alternate-search-box">
          <%= form_tag courses_path, method: :get do %>
            <%= search_field_tag :search, params[:search], placeholder: "#{t('home.search_courses')}" %>
            <i class="icon-search grey"></i>
            <%= submit_tag "Search", id: "search_btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>
