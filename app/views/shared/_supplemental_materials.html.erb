<h2>Supplemental Materials</h2>

<ul class="no-padding">
<%# TODO: make this a model method %>
<% course.attachments.where(doc_type: "supplemental").each do |a| %>
  <%= link_to course_attachment_path(course, a), target: "_blank" do %>
    <li data-cpl-ga-event="on" data-cpl-ga-value="supplemental-material-download" data-document-name='<%= "#{a.document_file_name}" %>'><i class="icon-download purple"></i><%= a.document_file_name %></li>
  <% end %>
<% end %>
</ul>
