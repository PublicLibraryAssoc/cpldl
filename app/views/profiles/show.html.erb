<h1>Your Profile</h1>

<%= form_for @profile, url: profile_path, method: :put do |f| %>

  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2>The following errors prohibited this profile from being saved:</h2>
      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <%= f.label :language_id do %>
      <%= t('profile_page.preferred_language') %><span class="required"></span>
    <% end %>
    <%= f.collection_select(:language_id, Language.all, :id, "name", { include_blank: "Select..." }, class: "select-large" ) %>
  </fieldset>

  <fieldset>
    <%= f.label :library_location_id do %>
      <%= t('profile_page.library_location') %>
    <% end %>
    <%= f.collection_select(:library_location_id, LibraryLocation.all, :id, "name", {include_blank: "Select..."}, class: "select-large", id: "chzn" ) %>
  </fieldset>

  <fieldset>
    <%= f.label :first_name do %>
      <%= t('login_signup.first_name') %>
    <% end %>
    <%= f.text_field :first_name %>
  </fieldset>

  <fieldset>
    <%= f.label :zip_code do %>
      <%= t('login_signup.zip_code') %>
    <% end %>
    <%= f.text_field :zip_code %>
  </fieldset>

  <fieldset>
    <%= f.submit "#{t('profile_page.save')}" %>
  </fieldset>

<% end %>
