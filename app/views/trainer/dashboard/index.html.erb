<%= content_for(:callout) do %>
  <h1>Cyber Navigator Dashboard</h1>
<% end %>

<h1>Users</h1>
<%= render partial: "shared/search_box", locals: { search_path: admin_users_path, placeholder_text: "Search users by keyword", search_param: :users_search } %>

<div class="row twelvecol underlined">
  <div class="two-of-twelve">
    <h2>Name</h2>
  </div>
  <div class="four-of-twelve">
    <h2><%= t('login_signup.email') %></h2>
  </div>
  <div class="two-of-twelve">
    <h2>Language</h2>
  </div>
  <div class="two-of-twelve">
    <h2>User Role</h2>
  </div>
</div>

<% @users.each do |user| %>
  <div class="row twelvecol underlined">
    <div class="two-of-twelve">
      <%= user.profile.try(:first_name) %>
    </div>
    <div class="four-of-twelve">
      <%= user.email %>
    </div>
    <div class="two-of-twelve">
      <%= user.preferred_language %>
    </div>
    <div class="two-of-twelve">
      <%= user.current_roles.empty? ? "user" : user.current_roles %>
    </div>
  </div>
<% end %>
