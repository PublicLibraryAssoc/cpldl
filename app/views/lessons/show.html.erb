<%= content_for :callout do %>
  <%= @lesson.title %>
<% end %>

<%= content_for :course_progress do %>
  <%= render partial: "shared/courses/course_progress",
    locals: { course: @course, course_progress: @course_progress } %>
<% end %>

<%= asl_iframe(@lesson) %>

<%# TODO: This is temporary %>
<button class="small" onclick="sendLessonCompleteEvent();">(Send completed event)</button>

<hr />

<div class="row">
  <div class="sixcol border-right">
    <h3><%= @course.title %></h3>
    <div>
      <i class="icon-book-open grey"></i>
      <small><%= @course.lessons.count %> Lessons</small>
      <i class="icon-clock grey"></i>
      <small>13 Minutes</small> <%# TODO: make dynamic %>
    </div>
    <%= render partial: "shared/lessons/listing", locals: { course: @course } %>
  </div>

  <div class="sixcol last">
    <%= render partial: "shared/supplemental_materials" %>
  </div>
</div>

<%= render partial: "shared/modal",
  locals: { course: @course, current_lesson: @lesson, next_lesson: @next_lesson}
%>
