<% if current_user %>
  <% lessons_completed = current_user.completed_lesson_ids(@course) %>
<% else %>
  <% lessons_completed = session[:lessons_done] %>
<% end %>

<section class="lession-listing">
  <div class="lesson-listing_header">
    <h2 class="text-color"><%= @course.title %></h2>
    <div>
      <i class="icon-book-open grey"></i>
      <small class="padding-right"><%= @course.lessons.published.count %> <%= t("course_page.lessons") %></small>
      <i class="icon-clock grey"></i>
      <small><%= @course.duration %></small>
    </div>
  </div>

  <div class="row lesson-listing">
    <div class="sixcol">
    <% @course.lessons.published.each_with_index do |l, index| %>
      <% if index <= @course.lessons.published.count / 2 %>
        <ul class="extra-padding">
          <li>
            <div class="row lesson-listing lesson-listing-first-row">
              <div class="onecol">
                <% if l.id == @lesson.id %>
                  <i class="icon-play"></i>
                <% elsif lessons_completed.include?(l.id) %>
                  <i class="icon-ok orange"></i>
                <% else %>
                  <i class="icon-none"></i>
                <% end %>
              </div>
              <div class="grey onecol">
                <%= index + 1 %>.
              </div>
              <div class="ninecol">
                <%= link_to l.title, course_lesson_path(@course, l), data: { cpl_ga_event: "on",  cpl_ga_value: "user-click-lesson" }, class: "block_link" %>
              </div>
            </div>
          </li>
        </ul>
      <% end %>
    <% end %>
    </div>
    <div class="sixcol last">
    <% @course.lessons.published.each_with_index do |l, index| %>
      <% if index > @course.lessons.published.count / 2 %>
        <ul class="extra-padding">
          <li>
            <div class="row lesson-listing lesson-listing-first-row">
              <div class="onecol">
                <% if l.id == @lesson.id %>
                  <i class="icon-play"></i>
                <% elsif lessons_completed.include?(l.id) %>
                  <i class="icon-ok orange"></i>
                <% else %>
                  <i class="icon-none"></i>
                <% end %>
              </div>
              <div class="grey onecol">
                <%= index + 1 %>.
              </div>
              <div class="ninecol">
                <%= link_to l.title, course_lesson_path(@course, l), data: { cpl_ga_event: "on",  cpl_ga_value: "user-click-lesson" } %>
              </div>
            </div>
          </li>
        </ul>
      <% end %>
    <% end %>
    </div>
  </div>
