<%= content_for :callout do %>
  <%= @course.title %>
<% end %>

<small><%= link_to "Dashboard", "#" %> >> <%= @course.title %></small>

<div class="row">
  <div class="eight-col">
    <%# TODO: Fill in dynamic info when ready. %>
    <div class="course-details">
      <div><i class="icon-pencil"></i>4 Lessons</div>
      <div><i class="icon-clock"></i>15 Minutes</div>
    </div>
    <p class="note">Contributed by Leslie James, <%= link_to "Commerce Kitchen", "#" %></p>
  </div>

  <div class="four-col last align-right">
    <%= link_to "Edit Course", edit_administrators_course_path(@course), class: "btn" %>
  </div>
</div>

<p>
  <%= @course.summary %>
</p>
<hr>

<h2>Lessons in this course</h2>
<%= render partial: "shared/lessons_grid", locals: { lessons: @course.lessons } %>
<hr>

<h2>Supplemental Materials</h2>

<%= link_to "#" do %>
  <i class="icon-download"></i>This is a PDF of the Course
<% end %>