<!DOCTYPE html>
<html>
  <head>
    <%= render "shared/meta_tags" %>
  </head>
  <body class="<%= current_organization.subdomain %>">
    <% if current_user.has_role?(:admin, current_organization) %>
      <%= render "shared/admin/header" %>
    <% else %>
      <%= render "shared/user/header" %>
    <% end %>
    <div class="banner color">
      <div class="container">
        <% if content_for?(:callout) %>
          <%= yield :callout %>
        <% else %>
          <%= render "shared/logo_banner" %>
        <% end %>
      </div>
    </div>
    <main class="container">
      <%= render "shared/flashes" %>
      <div class="row">
        <div class="threecol sidebar">
          <%= render "shared/user/sidebar" %>
        </div>
        <div class="ninecol last">
          <%= yield %>
        </div>
      </div>
    </main>
    <%= render "shared/footer" %>
  </body>
</html>
