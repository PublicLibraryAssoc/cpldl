<!DOCTYPE html>
<html>
<head>
  <%= render "shared/meta_tags" %>
</head>
<body>
  <% if current_user.is_admin? %>
    <%= render "shared/admin/header" %>
  <% else %>
    <%= render "shared/user/header" %>
  <% end %>

  <div class="banner large-top-padding">
    <div class="container row">
      <% if content_for?(:course_progress) %>
        <div class="eightcol">
        <% if content_for?(:callout) %>
          <%= yield :callout %>
        <% else %>
          <h1>Use a computer to do almost anything!</h1>
        <% end %>
        </div>
        <div class="fourcol last">
        <% if content_for?(:course_progress) %>
          <%= yield :course_progress %>
        <% end %>
        </div>
      <% else %>
        <div class="twelvecol">
        <% if content_for?(:callout) %>
          <%= yield :callout %>
        <% else %>
          <h1>Use a computer to do almost anything!</h1>
        <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <main class="container">
    <%= render "shared/flashes" %>
    <%= yield %>
  </main>

  <%= render "shared/footer" %>
</body>
</html>
